<section>
  <div class='pie_chart'>
    <%= collected_currencies_chart %>
  </div>

  <h1>Currencies</h1>

  <%= form_tag collect_currencies_path, :method => :put, :remote => true do %>
    <table class="items">
      <thead>
        <tr>
          <th>Name <%= text_field_tag :filter %></th>
          <th>Code</th>
          <th>Status</th>
          <th></th>
          <th><%= submit_tag "Collect" %>  <%= link_to_function "Check all", "checkAllItems();" %></th>
        </tr>
      </thead>
      <tbody>
        <% @currencies.each do |currency| %>
          <%= render 'currency_row', :currency => currency %>
        <% end %>
      </tbody>
    </table>
  <% end -%>  
</section>